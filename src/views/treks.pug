    body
        section(id="main")
            .hero-treks-main.uk-background-cover.uk-background-secondary.uk-background-fixed.uk-flex.uk-flex-column.uk-flex-middle.uk-background-blend-multiply(style="justify-content: center")
                .uk-flex.uk-flex-column.uk-flex-middle
                    .uk-light.uk-text-center
                        h1.uk-heading-primary.uk-text-uppercase(uk-scrollspy="cls:uk-animation-fade") Satopanth Trek
                        span.uk-text-lead.uk-heading-bullet.uk-text-uppercase(uk-scrollspy="cls:uk-animation-fade; delay:1000") Feel the Heaven on Earth

        .uk-column-1-2
             .uk-section(id="about-trek")
                .uk-background.uk-flex.uk-flex-column.uk-flex-middle.uk-flex-center
                    .uk-text-center
                        h1.uk-text-uppercase.uk-text-primary.uk-heading-divider(uk-scrollspy="cls:uk-animation-fade") About The Trek
             .uk-section(id="map")
                .uk-background.uk-flex.uk-flex-column.uk-flex-middle.uk-flex-center
                    .uk-text-center
                        h1.uk-text-uppercase.uk-text-primary.uk-heading-divider(uk-scrollspy="cls:uk-animation-fade") Map
                    #google-map(style="width:100%;height:600px;")

        script.
            function googleMap() {
            var myCenter = new google.maps.LatLng(30.7437,79.3569);
            var mapCanvas = document.getElementById("google-map");
            var mapOptions = {center: myCenter, zoom: 5};
            var map = new google.maps.Map(mapCanvas, mapOptions);
            var marker = new google.maps.Marker({position:myCenter});
            marker.setMap(map);
            }
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbJBVyCkDcFy7xSB4rY7DxXUgRwj1RcuA&callback=googleMap")
                
                    
