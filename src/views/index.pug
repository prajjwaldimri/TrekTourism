doctype html
html(lang="en")
  head
    title Uttarakhand Treks
    link(href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/css/uikit.min.css", rel="stylesheet")
    link(href="/dist/css/main.css", rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/js/uikit.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/js/uikit-icons.min.js")


  body
    section(id="main")
      .hero-main.uk-background-cover.uk-background-secondary.uk-background-fixed.uk-flex.uk-flex-column.uk-flex-middle.uk-flex-center.uk-background-blend-multiply
        .uk-light.uk-text-center.uk-margin-large-top
          h1.uk-heading-primary.uk-text-uppercase(uk-scrollspy="cls:uk-animation-fade") Uttarakhand Treks
          span.uk-text-lead.uk-heading-bullet.uk-text-uppercase(uk-scrollspy="cls:uk-animation-fade; delay:1500") Cause Outside is where life is
        div.uk-margin-medium-top.uk-button-group
          a.uk-button.uk-button-primary.uk-button-large(uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:2500")
            span.uk-margin-small-right(uk-icon="receiver")
            span.uk-text-break Book Now!
          a.uk-button.uk-button-secondary.uk-button-large(uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:3500")
            span.uk-margin-small-right(uk-icon="chevron-down")
            span Read More

      section(id="we-provide")
        .uk-background.uk-height-large

      section(id="trekking-destinations")
        .uk-background.uk-height-large

      section(id="treks-to-explore")
        .uk-background.uk-height-large

      section(id="upcoming-events")
        .uk-background.uk-height-large

      section(id="contact-us")
        .uk-background.uk-background-secondary.uk-height-large.uk-background-blend-multiply.uk-background-cover.uk-flex.uk-flex-column.uk-flex-middle.uk-flex-center
          .uk-light.uk-text-center
            h1.uk-text-uppercase(uk-scrollspy="cls:uk-animation-fade") Contact US
            span.uk-text-lead(uk-scrollspy="cls:uk-animation-fade; delay:500") We are available 24 hours to help.

          .social-icons.uk-margin-medium-top
            a.uk-icon-button.uk-margin-medium-right.icon-button-2x(uk-icon="icon: facebook; ratio: 2;", style="background-color: #3b5998; color:white;", uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:1000")
            a.uk-icon-button.uk-margin-medium-right.icon-button-2x(uk-icon="icon: google; ratio: 2", style="background-color: #34a853; color:white;", uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:1500")
            a.uk-icon-button.uk-margin-medium-right.icon-button-2x(uk-icon="icon: instagram; ratio: 2", style="background-color: #405de6; color:white;", uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:2000")
            a.uk-icon-button.uk-margin-medium-right.icon-button-2x(uk-icon="icon: receiver; ratio: 2", uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:2500")
            a.uk-icon-button.icon-button-2x(uk-icon="icon: whatsapp; ratio: 2", style="background-color: #25d366; color:white;", uk-scrollspy="cls:uk-animation-slide-bottom-small; delay:3000")

    script(src="/dist/js/main.js")

